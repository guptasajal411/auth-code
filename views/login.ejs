<body>
    
    
    <div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
			
				<div class="login100-pic js-tilt" data-tilt>
				<a href="https://www.fontspace.com/category/sans-serif"><img src="https://see.fontimg.com/api/renderfont4/JReLK/eyJyIjoiZnMiLCJoIjo1MSwidyI6MTI1MCwiZnMiOjQxLCJmZ2MiOiIjMTExMTExIiwiYmdjIjoiIzM1M0Q0QiIsInQiOjF9/QVVUSC1DT0RF/multiple-ranges-regular.png" alt="Sans Serif fonts"></a>
					<img id="main-gif" src="/img/logo1.gif" alt="IMG">
				</div>
<% if (message!=="&nbsp;" && message!=="emailNotFound"){ %>
    <div id="optmsg"><%= message %>
    <br />
    <img id="gtick" src="/img/download.png">
    <br />
    <div class="wrap-input100 validate-input" data-validate = "Valid OTP is required. Check your mail again.">
						<input class="input100" placeholder="Enter OTP" name="OTP" required>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-key" aria-hidden="true"></i>
						</span>
					</div>
					<div class="container-login100-form-btn">
						<button type="submit" class="login100-form-btn">
				            Verify OTP
						</button>
					</div>

    </div>
   <% } else if(message=="emailNotFound") { %>
<div id="notf">User not found. <a id="tryreg" data-content="Link Hover" class=tryreg href="/registration">Try Registering.</a><br /></div>
<% } else { %>
<form action="/login" method="POST" class="login100-form validate-form">
					<span class="login100-form-title">
						Member Login
					</span>

					<div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
						<input class="input100" type="text" name="email" placeholder="Email" required>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

					
					
					
					
                         <button type="submit" class="login100-form-btn">
                          Send OTP and QR
                         </button>
                          
					

				</form>
<% } %>
				
			</div>
		</div>
	</div>
	
	

	
